<header class = "homepageheader">
    <h1>PETSIT</h1>
    <a href = '/logout'><img src = 'images/log-out.svg'></a>
</header>
<div class = "category-container">
    <div class = 'category-text'>
        <h1>Pet Category</h1>
        <div class = 'category-display scrollmenu'>
            <div class = 'petcolumn'>
                <a>
                    <div class="animal-section">
                        <div class="category-content">
                            <img src="images/cat.svg" alt="cat icon" class="pet">
                            <p>Cats</p>
                        </div>
                    </div>
                </a>
                <a>
                    <div class="animal-section bottom-div">
                        <div class="category-content">
                            <img src="images/dog.svg" alt="dog icon" class="pet">
                            <p>Dogs</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class = 'petcolumn'>
                <a>
                    <div class="animal-section left-margin">
                        <div class="category-content">
                            <img src="images/birds.svg" alt="birds icon" class="pet">
                            <p>Birds</p>
                        </div>
                    </div>
                    </a>
                </a>
                <a>
                    <div class="animal-section bottom-div left-margin">
                        <div class="category-content">
                            <img src="images/rabbits.svg" alt="rabbits icon" class="pet">
                            <p>Rabbits</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class = 'petcolumn'>
                <a>
                    <div class="animal-section left-margin right-margin">
                        <div class="category-content">
                            <img src="images/fish.svg" alt="fish icon" class="pet">
                            <p>Fish</p>
                        </div>
                    </div>
                </a>
                <a>
                    <div class="animal-section bottom-div left-margin right-margin">
                        <div class="category-content">
                            <img src="images/reptile.svg" alt="reptile icon" class="pet">
                            <p>Reptile</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="request-body">
        <div class = "request-container">
            <h1>Latest Requests</h1>

                {{!-- {{#each requestList}} --}}
                    {{>requestPartial this}}
                {{!-- {{/each}} --}}

        </div>
    </div>
    <div class = "footer-background">
             <div class="footer-bar">
                <div class="left-part">
                    <a href = '/home'><img src = 'images/homeicon.svg'></a>
                    <a href = '/userrequests'><img src = 'images/requestsicon.svg'></a>
                </div>
                <div class="middle-part">
                    <a><img src = 'images/button.svg' class = 'middle-button'></a> 
                </div>
                <div class="right-part">
                    <a href = '/notifications'><img src = 'images/notificationsicon.svg'></a>
                    <a href = '/profile'><img src = 'images/profileicon.svg'</a>
                </div>
            </div>
    </div>
</div>
        

<script>document.body.classList.add('homepage')</script>
