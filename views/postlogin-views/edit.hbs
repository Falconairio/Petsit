<div class="container-test">
  <div class="img-container">
  <img src="images/header.svg" alt="head design" class="head-design">
  </div>

<div class="container">
  <form action='/auth/edit' method='POST' class="signup-form" enctype = "multipart/form-data">

    <input type='file' name='picture' placeholder="Picture Url" id = 'picture'>

    <input type='text' name='name' placeholder='Name..' id = 'name'>

    <textarea type = 'text' name = 'description' placeholder = "Description" id = 'description'></textarea>

    <button class='form-btn' type='submit'>Save</button>

    {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
  </form>
  <div class="delete-btn">
  <form action = '/auth/delete' method = 'POST'>
    <button type='submit'><img src="images/trash-2.svg" alt="trash" class="trash"> </button>
  </form>
  </div>
</div>
</div>










